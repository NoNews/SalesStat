<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"

    >


    <android.support.v7.widget.CardView
        android:id="@+id/managersCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:id="@+id/managerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8pt" />

                    <TextView
                        android:id="@+id/managerQuantityOfMeetings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Проведено встреч: 4"
                        android:textSize="5pt" />

                    <TextView


                        android:id="@+id/managerQuantityOfTenders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Количество тендеров: 5"
                        android:textSize="5pt" />


                </LinearLayout>


            <TextView
                android:id="@+id/managerPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="8pt" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>